<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/cookierun_bold"
        android:text="Level"
        android:textColor="@color/white"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_level_easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/cookierun_bold"
        android:paddingHorizontal="30dp"
        android:text="easy"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/tv_level"
        app:layout_constraintStart_toStartOf="@id/tv_level"
        app:layout_constraintTop_toBottomOf="@id/tv_level" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_level_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/cookierun_bold"
        android:paddingHorizontal="30dp"
        android:text="normal"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/btn_level_easy"
        app:layout_constraintStart_toStartOf="@id/btn_level_easy"
        app:layout_constraintTop_toBottomOf="@id/btn_level_easy" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_level_hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/cookierun_bold"
        android:paddingHorizontal="30dp"
        android:text="hard"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/btn_level_normal"
        app:layout_constraintStart_toStartOf="@id/btn_level_normal"
        app:layout_constraintTop_toBottomOf="@id/btn_level_normal" />

    <ImageView
        android:id="@+id/iv_level_home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/home"
        app:layout_constraintEnd_toEndOf="@+id/btn_level_hard"
        app:layout_constraintStart_toStartOf="@+id/btn_level_hard"
        app:layout_constraintTop_toBottomOf="@id/btn_level_hard"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>